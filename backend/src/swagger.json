{
    "openapi": "3.0.0",
    "info": {
        "title": "Store API",
        "description": "Essa API tem como objetivo do CRUD  de Produtos e Usuarios.",
        "contact": 
        {
            "email": "mcs@icomp.ufam.edu.br"
        },
        "version": "1.0.0"
    },
    "servers": [
        {
            "url": "http://localhost:3333",
            "description": "Local server"
        }
    ],
    "tags": [
        {
            "name": "Produtos",
            "description": "Operações relacionadas aos produtos"
        },
        {
            "name": "Usuarios",
            "description": "Operações relacionadas aos usuarios"
        }
    ],

    "paths": {
        "/produtos": {
            "get": {
                "summary": "Listagem de produtos",
                "description": "Essa rota será responsável por listar todos os produtos",
                "tags": [ "Produtos"],
                "responses": {
                    "200": {
                        "description": "Lista de produtos",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Produto"
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erro ao listar produtos"
                    }
                }
            },
            "post": {
                "summary": "Cadastro de produto",
                "description": "Essa rota será responsável por cadastrar um novo de produto",
                "tags": [ "Produtos" ],
                "security": [{"basicAuth": []}],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {  
                                "$ref": "#/components/schemas/Produto"
                            }
                        }
                    },
                    "examples": {
                        "Produto": {
                            "value": {
                                "nome": "Produto 1",
                                "preco": 10.00,
                                "estoque": 10
                            }
                        }
                    },
                    "description": "JSON do produto"
                },
                "responses": {
                    "201": {
                        "description": "Produto cadastrado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Produto"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erro ao cadastrar produto"
                    }
                }
            }
        },
        "/produtos:id": {
            "get": {
                "summary": "Busca de produto",
                "description": "Essa rota será responsável por buscar um produto",
                "tags": ["Produtos"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID do produto",
                        "required": true,
                        "type": "integer",
                        "format": "int64"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Produto buscado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Produto"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erro ao buscar produto"
                    }
                }
            },
            "put": {
                "summary": "Atualização de produto",
                "description": "Essa rota será responsável por atualizar um produto",
                "tags": ["Produtos"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID do produto",
                        "required": true,
                        "type": "integer",
                        "format": "int64"
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {  
                                "$ref": "#/components/schemas/Produto"
                            }
                        }
                    },
                    "examples": {
                        "Produto": {
                            "value": {
                                "name": "Produto 1",
                                "preco": 10.00,
                                "estoque": 10
                            }
                        }
                    },
                    "description": "JSON do produto"
                },
                "responses": {
                    "200": {
                        "description": "Produto atualizado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Product"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erro ao atualizar produto"
                    }
                }
            },
            "delete": {
                "summary": "Remoção de produto",
                "description": "Essa rota será responsável por remover um produto",
                "tags": ["Produtos"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID do produto",
                        "required": true,
                        "type": "integer",
                        "format": "int64"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Produto removido com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Produto"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erro ao remover produto"
                    }
                }
            }
        },
        "/usuarios": {
            "get": {
                "summary": "Listagem de usuarios",
                "description": "Essa rota será responsável por listar todos os usuarios",
                "tags": [ "Usuarios"],
                "responses": {
                    "200": {
                        "description": "Lista de usuarios",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "array",
                                    "items": {
                                        "$ref": "#/components/schemas/Usuario"
                                    }
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erro ao listar usuarios"
                    }
                }
            },
            "post": {
                "summary": "Cadastro de usuario",
                "description": "Essa rota será responsável por cadastrar um novo de usuario",
                "tags": [ "Usuarios" ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {  
                                "$ref": "#/components/schemas/Usuario"
                            }
                        }
                    },
                    "examples": {
                        "Usuario": {
                            "value": {
                                "nome": "Usuario 1",
                                "email": "exemplo@gmail.com",
                                "senha" : "123456"
                            }
                        }
                    }
                },
                "responses": {
                    "201": {
                        "description": "Usuario cadastrado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Usuario"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erro ao cadastrar usuario"
                    }
                }
            }
        },
        "/usuarios:id": {
            "get": {
                "summary": "Busca de usuario",
                "description": "Essa rota será responsável por buscar um usuario",
                "tags": ["Usuarios"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID do usuario",
                        "required": true,
                        "type": "integer",
                        "format": "int64"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Usuario buscado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Usuario"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erro ao buscar usuario"
                    }
                }
            },
            "put": {
                "summary": "Atualização de usuario",
                "description": "Essa rota será responsável por atualizar um usuario",
                "tags": ["Usuarios"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID do usuario",
                        "required": true,
                        "type": "integer",
                        "format": "int64"
                    }
                ],
                "requestBody": {
                    "content": {
                        "application/json": {
                            "schema": {  
                                "$ref": "#/components/schemas/Usuario"
                            }
                        }
                    },
                    "examples": {
                        "Usuario": {
                            "value": {
                                "nome": "Usuario 1",
                                "email": "exemplo@gmail.com",
                                "senha" : "123456"
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Usuario atualizado com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Usuario"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erro ao atualizar usuario"
                    }
                }
            },
            "delete": {
                "summary": "Remoção de usuario",
                "description": "Essa rota será responsável por remover um usuario",
                "tags": ["Usuarios"],
                "parameters": [
                    {
                        "name": "id",
                        "in": "path",
                        "description": "ID do usuario",
                        "required": true,
                        "type": "integer",
                        "format": "int64"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Usuario removido com sucesso",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "$ref": "#/components/schemas/Usuario"
                                }
                            }
                        }
                    },
                    "500": {
                        "description": "Erro ao remover usuario"
                    }
                }
            }
        }
    },
    "componets": {
        "schemas": {
            "Produto": {
                "type": "object",
                "properties": {
                    "nome": {
                        "type": "string",
                        "description": "Nome do produto"
                    },
                    "preco": {
                        "type": "number",
                        "description": "Preço do produto"
                    },
                    "estoque": {
                        "type": "number",
                        "description": "Quantidade do produto"
                    }
                }
            },
            "Usuario": {
                "type": "object",
                "properties": {
                    "nome": {
                        "type": "string",
                        "description": "Nome do usuário"
                    },
                    "email": {
                        "type": "string",
                        "description": "Email do usuário"
                    },
                    "senha": {
                        "type": "string",
                        "description": "Senha do usuário"
                    }
                }
            }
        }
    },
    "securitySchemes": {
        "basicAuth": {
            "type": "http",
            "scheme": "basic"
        }
    }
}